---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="KSP CU Sinar Sejahtera - Bersinergi untuk Kesejahteraan Bersama. Koperasi Simpan Pinjam Terpercaya." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | KSP CU Sinar Sejahtera</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <Header />
    <slot />
    <Footer />
    
    <!-- Floating Buttons -->
    <div class="floating-buttons">
        <a href="https://wa.me/6281234567890" target="_blank" class="float-btn wa-btn" title="Chat WhatsApp">
            WA
        </a>
    </div>
</body>
</html>
