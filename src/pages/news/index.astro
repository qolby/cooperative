---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allNews = await getCollection("news");
// Sort by date desc
const sortedNews = allNews.sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
);
---

<Layout title="Berita & Kegiatan">
    <!-- Page Header -->
    <div
        class="bg-[var(--color-dark-blue)] text-white py-16 md:py-24 text-center"
    >
        <div class="max-w-7xl mx-auto px-4 md:px-6">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
                Berita & Kegiatan
            </h1>
            <p class="text-lg md:text-xl text-white/90">
                Informasi terbaru seputar aktivitas [Cooperative Name]
            </p>
        </div>
    </div>

    <section class="py-16 md:py-20 lg:py-24">
        <div class="max-w-7xl mx-auto px-4 md:px-6">
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
            >
                {
                    sortedNews.map((item) => (
                        <article class="bg-white rounded-xl shadow-md overflow-hidden hover:-translate-y-2 hover:shadow-lg transition-all duration-300">
                            <div class="h-48 bg-slate-200 flex items-center justify-center text-slate-500 font-medium">
                                Foto Kegiatan
                            </div>
                            <div class="p-6">
                                <span class="text-xs uppercase tracking-wider text-[var(--color-text-light)] mb-2 block">
                                    {new Date(
                                        item.data.date,
                                    ).toLocaleDateString("id-ID", {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    })}
                                </span>
                                <h3 class="text-lg font-bold text-[var(--color-text-dark)] mb-2">
                                    {item.data.title}
                                </h3>
                                <p class="text-[var(--color-text-grey)] text-sm mb-4">
                                    {item.data.summary}
                                </p>
                                <a
                                    href={`/news/${item.slug}`}
                                    class="text-[var(--color-primary-blue)] font-medium text-sm hover:underline"
                                >
                                    Baca Selengkapnya â†’
                                </a>
                            </div>
                        </article>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
